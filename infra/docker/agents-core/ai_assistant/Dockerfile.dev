# Development Dockerfile for AI Assistant Supervisor
# Hot-reload enabled for rapid development

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install UV package manager
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.cargo/bin:$PATH"

# Copy project files
COPY agents-core/pyproject.toml agents-core/uv.lock* ./

# Install dependencies with UV
RUN uv sync --frozen

# Copy source code
COPY agents-core/ ./

# Expose port 8001 (different from Workflow Supervisor's 8000)
EXPOSE 8001

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV LOG_LEVEL=DEBUG

# Run with hot reload using uvicorn --reload
CMD ["uv", "run", "uvicorn", "supervisors.ai_assistant.agent_executor:app", \
     "--host", "0.0.0.0", "--port", "8001", "--reload", "--log-level", "debug"]