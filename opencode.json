{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": "allow",
    "webfetch": "allow"
  },
  "instructions": [
    "AGENTS.md"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  },
  "command": {
    "test": {
      "template": "Run the full test suite with coverage report and show any failures.\nFocus on the failing tests and suggest fixes.",
      "description": "Run tests with coverage",
      "agent": "build"
    },
    "eli5": {
      "template": "Explain like I'm 5 the following: $ARGUMENTS",
      "description": "Explain in easy to understand terms",
      "agent": "plan"
    }
  },
}